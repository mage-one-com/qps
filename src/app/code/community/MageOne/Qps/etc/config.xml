<?xml version="1.0"?>
<config>
    <modules>
        <MageOne_Qps>
            <version>1.2.2</version>
        </MageOne_Qps>
    </modules>
    <global>
        <helpers>
            <qps>
                <class>MageOne_Qps_Helper</class>
            </qps>
        </helpers>
        <blocks>
            <qps>
                <class>MageOne_Qps_Block</class>
            </qps>
        </blocks>
        <models>
            <qps>
                <class>MageOne_Qps_Model</class>
                <resourceModel>qps_resource</resourceModel>
            </qps>
            <qps_resource>
                <class>MageOne_Qps_Model_Resource</class>
                <entities>
                    <rule>
                        <table>mageone_qps_rules</table>
                    </rule>
                </entities>
            </qps_resource>
        </models>
        <resources>
            <qps_setup>
                <setup>
                    <module>MageOne_Qps</module>
                </setup>
            </qps_setup>
        </resources>
        <template>
            <email>
                <mageone_qps_ruleupdate translate="label" module="qps">
                    <label>QPS rule update</label>
                    <file>qps_ruleupdate.html</file>
                    <type>html</type>
                </mageone_qps_ruleupdate>
            </email>
        </template>
        <events>
            <controller_front_init_before>
                <observers>
                    <controller_front_init_before_handler>
                        <type>singleton</type>
                        <class>qps/observer</class>
                        <method>checkRequest</method>
                    </controller_front_init_before_handler>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MageOne_Qps after="Mage_Adminhtml">MageOne_Qps_Adminhtml</MageOne_Qps>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <MageOne_Qps>
                    <files>
                        <default>MageOne_Qps.csv</default>
                    </files>
                </MageOne_Qps>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <qps_getrules>
                <schedule>
                    <!-- Run cron 8 minutes after each full hour - to not run in parallel with all hourly crons-->
                    <cron_expr>8 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>qps/cron::getRules</model>
                </run>
            </qps_getrules>
        </jobs>
    </crontab>
    <default>
        <qps_section>
            <config>
                <status>0</status>
                <url>https://qps.mage-one.com/update</url>
                <rule_auto_enable>0</rule_auto_enable>
            </config>
        </qps_section>
    </default>
    <mage-one>
        <patches>
            <test-patch>TEST patch</test-patch>
        </patches>
    </mage-one>
</config>

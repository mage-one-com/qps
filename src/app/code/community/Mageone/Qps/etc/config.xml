<?xml version="1.0"?>
<config>
    <modules>
        <Mageone_Qps>
            <version>0.2.0</version>
        </Mageone_Qps>
    </modules>
    <global>
        <helpers>
            <qps>
                <class>Mageone_Qps_Helper</class>
            </qps>
        </helpers>
        <blocks>
            <qps>
                <class>Mageone_Qps_Block</class>
            </qps>
        </blocks>
        <models>
            <qps>
                <class>Mageone_Qps_Model</class>
                <resourceModel>qps_resource</resourceModel>
            </qps>
            <qps_resource>
                <class>Mageone_Qps_Model_Resource</class>
                <entities>
                    <rule>
                        <table>mageone_qps_rules</table>
                    </rule>
                </entities>
            </qps_resource>
        </models>
        <resources>
            <qps_setup>
                <setup>
                    <module>Mageone_Qps</module>
                </setup>
            </qps_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <controller_front_init_before_handler>
                        <type>singleton</type>
                        <class>qps/observer</class>
                        <method>checkRequest</method>
                    </controller_front_init_before_handler>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mageone_Qps before="-">Mageone_Qps_Adminhtml</Mageone_Qps>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Mageone_Qps>
                    <files>
                        <default>Mageone_Qps.csv</default>
                    </files>
                </Mageone_Qps>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <qps_getrules>
                <schedule>
                    <!-- Run cron 8 minutes after each full hour - to not run in parallel with all hourly crons-->
                    <cron_expr>8 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>qps/cron::getRules</model>
                </run>
            </qps_getrules>
        </jobs>
    </crontab>
    <default>
        <qps_section>
            <config>
                <status>0</status>
                <url>https://qps.mage-one.com/update</url>
                <rule_auto_enable>0</rule_auto_enable>
            </config>
        </qps_section>
    </default>
</config>
